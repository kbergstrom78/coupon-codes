<%= render partial: "shared/nav" %>

<h3>Active Coupons:</h3>
<div id="active">
  <% @active_coupons.each do |coupon| %>
    <div id="coupon-<%= coupon.id %>">
    <%= link_to coupon.name, merchant_coupon_path(merchant_id: @merchant.id, id: coupon.id) %>
      Amount Off: <%= coupon.amount_off %> <%= coupon.coupon_type %></p>
    </div>
  <% end %>
</div>

<h3>Inactive Coupons:</h3>
<div id="inactive">
  <% @inactive_coupons.each do |coupon| %>
    <div id="coupon-<%= coupon.id %>">
      <%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %>
      Amount Off: <%= coupon.amount_off %> <%= coupon.coupon_type %></p>
    </div>
  <% end %>
</div>

<%= link_to "Create a Coupon", new_merchant_coupon_path(@merchant) %>

<section>
    <div id= "upcoming-holidays">
  <h2>Upcoming Holidays</h2>
  <ul>
    <% @upcoming_holidays.each do |holiday| %>
      <li>
        <strong><%= holiday.name %>:</strong> <%= holiday.date %></li>
      </li>
    <% end %>
  </ul>
</section>

